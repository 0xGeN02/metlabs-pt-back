{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["api/*"],
      "@lib/*": ["lib/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"],
      "@prismadb/*" : ["prisma/*"],
      "@email/*": ["email/*"],
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "jsx": "react"
  }
}